subpackage stat4
## sbar done by albeniz 
## sbar modified by wicked
^set input_prompt $(sc2)-$(sc1)-$(hblk)[$(cl)amn::$(hblk)] 
alias stat4 {

^set status_format1 $(sc2)$(ld.ul_corner)$(sc1)$(ld.hline)$(hblk)[%*%=%@$(cl)%N%#$(hblk)] %A%M %> %Q $(hblk)[$(sc1)T$(cl)ime$(hblk)/$(cl)%T$(hblk)] $(hblk)[$(sc1)L$(cl)ag$(hblk)/$(cl)%1$(hblk)]$(sc1)$(ld.hline)$(sc2)$(ld.ur_corner)
^set status_format2 $(sc1)$(ld.ll_corner)$(hblk)$(ld.hline)[$(cl)%C$(hblk)%+$(hblk)] $(hblk)[$(sc1)o$(hblk)/$(cl)%2 $(sc1)n$(hblk)/$(cl)%3 $(sc1)v$(hblk)/$(cl)%4$(hblk)] %> %F $(hblk)[$(cl)%{2}S$(hblk)]$(sc1)$(ld.hline)$(sc2)$(ld.lr_corner)
^set status_notify $(hblk)[$(sc1)A$(cl)ct$(hblk)/$(cl)%F$(hblk)]
^set status_umode $(sc2)\($(cl)+%#$(sc2)\)
^set status_server %S
^set status_oper $(sc1)*
^set status_clock %T
^set status_lag %L
^set status_channel %C
^set status_mode $(sc1)\($(cl)+%+$(sc1)\)
^set status_chanop $(sc4)@$(sc3)
^set status_mail $(hblk)[$(sc1)M$(cl)ail$(hblk)/$(cl)%M$(hblk)]
^set status_voice +
^set status_away $(hblk)[$(sc1)A$(cl)way$(hblk)] 
^set status_query $(hblk)\[$(sc1)Q$(hblk):$(cl)%Q$(hblk)]
^set status_user5 $(cl)$S
^set status_format5 %> %5
}
stat4
@windowdoubles=[on]
^window double on
^timer -del 14
